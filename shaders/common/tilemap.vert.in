#version {{ VERSION }}

{{ LOCATION 0 BINDING 0 RATE_VERTEX OFFSET TIGHTLY_PACKED }} in vec2 a_uv;
{{ LOCATION 1 BINDING 0 RATE_VERTEX OFFSET TIGHTLY_PACKED }} in vec3 a_pos;
{{ LOCATION 2 BINDING 0 RATE_VERTEX OFFSET TIGHTLY_PACKED }} in float a_texture_id;

{{ LOCATION 0 }} out float texture_id;

{{ SET_BINDING 0 0 BUFFER_LABEL CAMERA_VP }} uniform VPUniform {
    mat4 vp;
} u_vp;

void main(){

    vec4 transformed_pos = u_vp.vp * vec4(a_pos.x, -a_pos.y, a_pos.z, 1.0);
    gl_Position = vec4(vec3(transformed_pos), 1.0);

    texture_id = a_texture_id;
}

