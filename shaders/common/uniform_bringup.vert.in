#version {{ VERSION }}

// get a rotating triangle in the middle of the screen
// fragment shader will do the classic rgb thing

{{ LOCATION 0 BINDING 0 RATE_VERTEX OFFSET TIGHTLY_PACKED }} in vec3 a_pos;
{{ LOCATION 0 }} out vec3 pos;

{{ SET_BINDING 0 0 BUFFER_LABEL GLOBAL }} uniform TriangleTransformation {
    mat4 mat;
} transformation;

void main(){
    pos = a_pos;
    vec4 transformed_pos = transformation.mat * vec4(a_pos, 1.0);
    gl_Position = vec4(vec3(transformed_pos), 1.0);
}
