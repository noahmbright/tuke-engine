#version {{ VERSION }}

{{ LOCATION 0 BINDING 0 RATE_VERTEX OFFSET TIGHTLY_PACKED }} in vec3 a_pos;
{{ LOCATION 1 BINDING 0 RATE_VERTEX OFFSET TIGHTLY_PACKED }} in vec2 a_uv;

{{ LOCATION 0 }} out vec2 uv;

{{ SET_BINDING 0 0 }} uniform VPUniform {
    mat4 vp;
} vp;

{{ SET_BINDING 0 1 }} uniform ModelUniform {
    mat4 model;
} model;


void main(){
    uv = a_uv;
    gl_Position = vp.vp * model.model * vec4(a_pos, 1.0);
}
