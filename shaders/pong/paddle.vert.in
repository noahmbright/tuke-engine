#version {{ VERSION }}

{{ LOCATION 0 }} in vec3 a_pos;
{{ LOCATION 1 }} in vec2 a_uv;

{{ LOCATION 0 }} out vec2 uv;

{{ SET_BINDING 0 0 }} uniform MVPUniform{
    mat4 model;
    mat4 view;
    mat4 projection;
} mvp;

void main(){
    uv = a_uv;
    gl_Position = mvp.projection * mvp.view * mvp.model * vec4(a_pos, 1.0);
}
